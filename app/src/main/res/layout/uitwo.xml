<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server IP:"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:text="192.168.1.11" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/bConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp" >

            <TextView
                android:id="@+id/textViewConStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection Status: " />

            <TextView
                android:id="@+id/textViewConStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Connected" />
        </LinearLayout>

        <Button
            android:id="@+id/button_launchDota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Launch Dota 2" />

        <Button
            android:id="@+id/buttonPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Pause Game" />

        <Button
            android:id="@+id/buttonFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Find Game" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Message: " />

            <EditText
                android:id="@+id/editTextMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonMsgServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Server" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/buttonMsgLobby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Msg Lobby" />

            <Button
                android:id="@+id/buttonMsgTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Msg Team" />

            <Button
                android:id="@+id/buttonMsgAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Chat" />

        </LinearLayout>

</LinearLayout>